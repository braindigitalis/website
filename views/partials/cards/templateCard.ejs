<div class="column is-one-third" is-template-card>
    <div class="box has-background-primary" style="overflow: hidden; height: 100%;">
        <article class="media">
            <div class="media-left">
                <figure class="image is-64x64">
                    <img width="64" height="64" class="is-rounded" loading="lazy" src="<%= template.icon.hash ? template.icon.url : `${baseURL}/img/defaultavatar` %>.<%= imageFormat %>?size=128" alt="<%= __("common.img.icon", template.name) %>" onerror="this.onerror = null;this.src = '/img/defaultavatar.<%= imageFormat %>';console.log('<%= __("common.img.loadFail", template._id) %>');" >
                </figure>
            </div>
            <div style="overflow: hidden;" class="media-content">
                <div class="content">
                    <p>
                    <span class="is-size-4 title has-text-default is-mobile">
                        <span><%= template.name %></span>
                    </span>
                        <br />
                        <%= template.shortDesc.length >= 64 ? template.shortDesc.slice(0, 64)+'\u2026' : template.shortDesc %>
                    </p>
                </div>
                <div class="content-footer">
                    <div class="buttons">
                        <% if (search === true) { %>
                            <a href="<%= linkPrefix %>/templates/<%= template._id %>" class="button is-default is-outlined">
                                <span class="icon">
                                  <i class="fas fa-clone"></i>
                                </span>
                                <span><%= __("common.view.template") %></span>
                            </a>
                        <% } else { %>
                            <a href="<%= linkPrefix %>/templates/<%= template._id %>" class="button is-default is-outlined">
                                <span class="icon">
                                <i class="fas fa-eye"></i>
                                </span>
                                <span><%= __("common.view") %></span>
                            </a>
                            <% if (req.user && profile === true && template.owner.id === req.user.id) { %>
                                <a href="<%= linkPrefix %>/templates/<%= template._id %>/edit" class="button is-warning is-outlined">
                                    <span class="icon">
                                      <i class="fas fa-pencil"></i>
                                    </span>
                                    <span><%= __("common.edit") %></span>
                                </a>
                            <% } %>
                            <a target="_blank" rel="noopener" href="<%= template.links.template %>" class="button is-blurple is-outlined">
                                <span class="icon">
                                  <i class="fas fa-clone"></i>
                                </span>
                                <span><%= __("common.use") %></span>
                            </a>
                        <% } %>
                    </div>
                </div>
            </div>
        </article>
    </div>
</div>
