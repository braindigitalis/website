        <script>
    const code = document.querySelector('#form_inviteCode')
    const shortDesc = document.querySelector('#form_shortDescription')
    const name = document.querySelector('#serverName')
    code.addEventListener('change', async () => {
        if (!code.value) return name.innerText = ""

        if (code.value.includes(' ')) {
            document.getElementById("errors").style.display = "block";
            document.getElementById("errorList").innerText = '<%= __("common.error.listing.arr.invite.invalid") %>'
            scroll(0, 0);
        } else if (code.value.length > 32) {
            document.getElementById("errors").style.display = "block";
            document.getElementById("errorList").innerHTML = '<%= __("common.error.listing.arr.invite.tooLong") %>'
            scroll(0, 0);
        } else if (code.value.includes('discord.gg')) {
            document.getElementById("errors").style.display = "block";
            document.getElementById("errorList").innerHTML = '<%= __("common.error.server.arr.invite.dgg") %>'
            scroll(0, 0);
        } else document.getElementById("errors").style.display = "none";

        const invite = await (await fetch(`https://discord.com/api/v8/invites/${code.value}?with_expiration=true`)).json()
        if (!invite.guild) return

        name.innerText = invite.guild.name

        if (invite.expires_at) {
            document.getElementById("errors").style.display = "block";
            document.getElementById("errorList").innerHTML = '<%= __("common.error.server.invite.expires") %>'
            return scroll(0, 0)
        }

        if (await (await fetch(`./${invite.guild.id}/exists`)).json()) {
            document.getElementById("errors").style.display = "block";
            document.getElementById("errorList").innerText = '<%= __("common.error.server.conflict") %>'
            scroll(0, 0);
        } else {
            document.getElementById("errors").style.display = "none";
            if (!shortDesc.value) {
                if (invite.guild.description) {
                    shortDesc.value = invite.guild.description
                } else if (invite.guild.welcome_screen.description) {
                    shortDesc.value = invite.guild.welcome_screen.description
                }
            }
        }
    })
            
    const warn = event => {
        event.preventDefault()
        event.returnValue=''
    }
    addEventListener('beforeunload', warn)
    document.querySelector('form').onsubmit = () => removeEventListener('beforeunload', warn)

    function doSubmit() {
        monacoToField();
        document.getElementById("errors").style.display = "none";
        document.getElementById("submitButton").classList.add("is-loading");
        document.getElementById("cancelButton").setAttribute("disabled", true);
        document.getElementById("cancelButton").removeAttribute("href");

        async function fetchPOST(url = '', data = {}) {
            const response = await fetch(url, {
                method: "POST",
                mode: "cors", 
                cache: "no-cache", 
                credentials: "same-origin",
                headers: {
                    "Content-Type": "application/json"
                },
                redirect: "follow",
                referrerPolicy: "no-referrer",
                body: JSON.stringify(data)
            });

            return response.json();
        }

        fetchPOST("<%= linkPrefix %>/servers/submit", {
            shortDescription: document.getElementById("form_shortDescription").value,
            longDescription: document.getElementById("longDesc").value,
            invite: document.getElementById("form_inviteCode").value,
            website: document.getElementById("form_website").value,
            donationUrl: document.getElementById("form_donationUrl").value,
            previewChannel: document.getElementById("form_previewChannel")?.value,

            gaming: document.getElementById("gaming").checked,
            music: document.getElementById("music").checked,
            mediaEntertain : document.getElementById("mediaEntertain").checked,
            createArts: document.getElementById("createArts").checked,
            sciTech: document.getElementById("sciTech").checked,
            edu: document.getElementById("edu").checked, 
            fashBeaut: document.getElementById("fashBeaut").checked,
            relIdentity: document.getElementById("relIdentity").checked,
            travelCuis: document.getElementById("travelCuis").checked,
            fitHealth: document.getElementById("fitHealth").checked,
            finance: document.getElementById("finance").checked,
            lgbt: document.getElementById("lgbt").checked
        })
        .then(data => {
            if (!data || data.error === true) {
                document.getElementById("errors").style.display = "block";
                document.getElementById("errorList").innerHTML = data.errors.map(err => `<li>${err}</li>`).join('');
                scroll(0, 0);
                document.getElementById("submitButton").classList.remove("is-loading");
                document.getElementById("cancelButton").removeAttribute("disabled");
                document.getElementById("cancelButton").setAttribute("href", "<%= linkPrefix %>/users/@me");
            } else {
                removeEventListener("beforeunload", warn);
                window.location = `<%= linkPrefix %>/servers/${data.id}`;
            }
        });
    }
    MonacoEnvironment = {getWorkerUrl: () => '/js/monaco.js'}
</script>
